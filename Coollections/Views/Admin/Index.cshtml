@using Coollections.Models.Database.Items
@model Coollections.ViewModels.AdminViewModel

@{
    ViewBag.Title = "Admin panel";
    Layout = "_Layout";
}
<div>
    <br/>
    <button onclick="blockUsers()" value="BlockUsers" type="button" class="btn btn-danger">
        Block
    </button>
    <button onclick="unblockUsers()" value="UnblockUsers" type="button" class="btn btn-primary">
        Unblock
    </button>
    <button onclick="deleteUsers()" value="DeleteUsers" type="button" class="btn btn-dark">
        Delete
    </button>
    <button onclick="addAdmins()" value="AddAdmins" type="button" class="btn btn-success">
        Pass admin rights
    </button>
    <button onclick="removeAdmins()" value="RemoveAdmins" type="button" class="btn btn-warning">
        Reject admin rights
    </button>
    <br/>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col">
                <div class="form-check">
                    <input onClick="toggle(this)" class="form-check-input" type="checkbox">
                </div>
            </th>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">IsBlocked</th>
            <th scope="col">IsAdmin</th>
        </tr>
        </thead>
        <tbody>
        @foreach (User user in Model.Users)
        {
            <tr>
                <th scope="row">
                    <div class="form-check">
                        <input value=@user.Id
                               class="form-check-input admin-checks" type="checkbox">
                    </div>
                </th>
                <td>@user.Id.ToString()</td>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.IsBlocked.ToString()</td>
                <td>@user.IsAdmin.ToString()</td>
            </tr>
        }
        </tbody>
    </table>
</div>

<script src="~/js/tools/requests.js"></script>
<script src="~/js/admin/index.js">

</script>